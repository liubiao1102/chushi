<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fen_lei_xq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.lenglian.fragment.good.FenLeiXQActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/back_layout"
            android:gravity="center"
            android:layout_width="60dip"
            android:layout_height="50dip">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:textColor="#333"
            android:layout_marginRight="60sp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="桃子"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:paddingRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_jiage"
                        style="@style/paixutab_style"
                        android:text="价格排序"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_jiage"
                        android:src="@drawable/bommoren"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_xiaoliang"
                        style="@style/paixutab_style"
                        android:text="销量排序"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_xiaoliang"
                        android:src="@drawable/bommoren"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout><LinearLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_haoping"
                    style="@style/paixutab_style"
                    android:text="好评优先"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_haoping"
                    android:src="@drawable/bommoren"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_renqi"
                        style="@style/paixutab_style"
                        android:text="人气优先"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_renqi"
                        android:src="@drawable/bommoren"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#eee"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dip">
        <TextView
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:paddingRight="60dip"
            android:paddingLeft="60dip"
            android:gravity="center"
            android:id="@+id/tv_search"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:drawableLeft="@drawable/icon_search"
            android:text="请输入搜索内容"/>
    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        ></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tuijianXQ_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
