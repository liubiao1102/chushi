<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sure_to_zhi_fu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.lenglian.fragment.order.SureToZhiFuActivity">
    <RelativeLayout
        android:id="@+id/rl_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="订单确认"
            android:textColor="@color/textblack"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>
    <LinearLayout
        android:id="@+id/checkaddress_layout"
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dip">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
            <TextView
                android:textColor="#333"
                android:layout_gravity="center_vertical"
                android:text="小李"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="10dip"
                android:textColor="#333"
                android:text="13333333333"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
            <TextView
                android:textColor="#333"
                android:layout_gravity="center_vertical"
                android:text="山西，太原市，万柏林区"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>
    <EditText
        android:background="@null"
        android:padding="10dip"
        android:gravity="left"
        android:textSize="14sp"
        android:hint="备注"
        android:layout_width="match_parent"
        android:layout_height="100dip" />
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>
    <LinearLayout
        android:id="@+id/checkyhj_layout"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        >
        <TextView
            android:textColor="#333"
            android:text="优惠劵"
            android:layout_gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="10dip"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:text="扫码红包  满200减16"
            android:drawableRight="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>

    <LinearLayout
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="商品总额"
            android:textSize="14sp"/>

        <TextView
            android:textColor="@color/chengse"
            android:textSize="14sp"
            android:text="¥8.00元"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="优惠劵折扣"
            android:textSize="14sp"/>

        <TextView
            android:textSize="14sp"
            android:text="¥0.00元"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="折扣"
            android:textSize="14sp"/>

        <TextView
            android:textSize="14sp"
            android:text="¥0.00元"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="可用3000积分抵用30元"
            android:textSize="14sp"/>

        <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    </LinearLayout>
    <View
        android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="运费"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginLeft="5dip"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="(在北京市内免运费，超过每1公里增加2元)"
            android:textSize="12sp"/>
        <TextView
            android:textSize="14sp"
            android:text="¥0.00元"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"></View>
    <LinearLayout
        android:paddingLeft="15dip"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:text="商品金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dip"
            android:textSize="16sp"
            android:textColor="@color/chengse"
            android:layout_gravity="center_vertical"
            android:text="￥180元"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/to_jiesuan"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确认支付"
            android:background="@drawable/querenzhifu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
