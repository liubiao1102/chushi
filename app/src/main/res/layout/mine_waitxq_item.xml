<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_tupian"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:src="@drawable/ertong"/>
        <LinearLayout
            android:paddingLeft="10dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#333"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="商品名称：儿童套餐"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <TextView
                android:textColor="#333"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="商品数量：1份"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <TextView
                android:textSize="14sp"
                android:textColor="#ffad73"
                android:gravity="center_vertical"
                android:text="￥128.00"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/pinglun"
            android:textColor="@color/chengse"
            android:textSize="12sp"
            android:gravity="center"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
</LinearLayout>