<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:padding="5dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <CheckBox
            android:layout_margin="5dip"
            android:layout_gravity="center_vertical"
            android:id="@+id/check_box"
            android:button="@null"
            android:background="@drawable/tab_housing_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/tupian"
            android:id="@+id/iv_record_house"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:paddingLeft="15dip"
            android:layout_margin="3dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="营养套餐/份"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <TextView
                android:id="@+id/tv_goods_price"
                android:textColor="@color/chengse"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="￥128"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <LinearLayout
                android:layout_marginLeft="50dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle_gray"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/grey_color1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/grey_color1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle_right"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/grey_color1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>