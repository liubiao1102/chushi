<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_banner_xq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.lenglian.fragment.home.BannerXQActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/back_layout"
            android:gravity="center"
            android:layout_width="60dip"
            android:layout_height="50dip">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:textColor="#333"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="全场s蔬菜3折"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

            <ImageView
                android:padding="10dip"
                android:id="@+id/img_fenxiang"
                android:layout_gravity="center"
                android:src="@drawable/fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <ImageView
        android:src="@drawable/xiangqingbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
