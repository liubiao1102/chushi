<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/huise"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_margin="5dip"
        android:background="#fff"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_tupian"
            android:layout_gravity="center"
            android:layout_width="130dip"
            android:layout_height="100dip"
            android:src="@drawable/shangp1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/img_tehui"
            android:textColor="#ffad73"
            android:textSize="12sp"
            android:layout_marginLeft="15dip"
            android:text="特惠"
            android:background="@drawable/tehui_bg"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center"
            />
            <TextView
                android:id="@+id/tv_kou_price"
                android:layout_gravity="right"
                android:layout_marginRight="15dip"
                android:gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:text="省￥2.5"
                android:textColor="#ff8db8"
                android:textSize="10sp"/>
            </LinearLayout>
        <TextView
            android:id="@+id/tv_shop_title"
            android:gravity="center"
            android:layout_marginLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="国产头茬蓝莓"
            android:textColor="@color/textblack"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="15dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="20dip"
                android:text="￥99"
                android:textColor="#ffad73"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/add_shopp"
                android:layout_marginRight="15dip"
                android:src="@drawable/tianjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>