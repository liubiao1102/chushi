<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jie_suan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    >
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/rl_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="在线支付"
            android:textColor="@color/textblack"
            android:textSize="18sp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_Delete"
            android:textSize="16sp"
            android:textColor="@color/textblack"
            android:text="编辑"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
    </RelativeLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>

    <LinearLayout
        android:background="#fff"
        android:gravity="center"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dip">
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/chengse"
            android:textSize="40sp"
            android:text="15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:text="支付剩余时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>
    <LinearLayout
        android:background="#fff"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">
        <TextView
            android:textColor="#333"
            android:textSize="16sp"
            android:gravity="center"
            android:text="订单编号:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_order_number"
            android:textColor="#333"
            android:textSize="16sp"
            android:gravity="center"
            android:text="231453646131213152313"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_price"
            android:textColor="@color/chengse"
            android:textSize="16sp"
            android:gravity="center"
            android:text="￥128"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dip"></View>
    <TextView
        android:background="#fff"
        android:paddingLeft="15dip"
        android:gravity="center_vertical"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:text="选择支付方式"/>
    <View
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:background="#fff"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/zhifub"
            android:textColor="#333"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dip"
            android:textColor="#333"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <CheckBox
            android:checked="true"
            android:id="@+id/check_zfb"
            android:layout_margin="5dip"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/tab_housing_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
    <LinearLayout
        android:background="#fff"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:orientation="horizontal">
    <TextView
        android:textColor="#333"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/weixinzf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="15dip"
        android:textColor="#333"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:text="微信"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent" />
        <CheckBox
            android:id="@+id/check_wx"
            android:layout_margin="5dip"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/tab_housing_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>

    <TextView
        android:id="@+id/tv_tozhifu"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/zhifu"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="支付"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
