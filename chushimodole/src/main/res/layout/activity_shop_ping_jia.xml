<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ping_lun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.example.administrator.chushi.fragment.mine.PingLunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="60dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_back" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="60sp"
            android:gravity="center"
            android:text="评论商品"
            android:textColor="#333"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#eee"></View>

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dip">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_tupian"
            android:layout_width="140dip"
            android:layout_height="100dip"
            android:src="@drawable/ertong"/>
        <LinearLayout
            android:paddingLeft="10dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_shop_name"
                android:textColor="#333"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="商品名称：儿童套餐"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <TextView
                android:id="@+id/tv_shop_num"
                android:textColor="#333"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="商品数量：1份"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <TextView
                android:id="@+id/tv_shop_price"
                android:textSize="14sp"
                android:textColor="#ffad73"
                android:gravity="center_vertical"
                android:text="￥128.00"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#eee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dip"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:padding="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="服务评分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

            <com.example.administrator.chushi.view.RatingBarView
                android:id="@+id/ratingBarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="20dip"
            android:text="评论内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
        <LinearLayout
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edt_content"
                android:background="@drawable/shuru"
                android:gravity="left|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_fabiao"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="发表"
        android:layout_marginTop="50dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/fabiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
