<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tui_kuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.example.administrator.chushi.fragment.mine.TuiKuanActivity">
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/rl_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="退款申请"
            android:textColor="@color/textblack"
            android:textSize="18sp"/>
    </RelativeLayout>
        <LinearLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="10dip"></View>
            <LinearLayout
                android:background="#fff"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dip">
                <TextView
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_zhuangtai"
                    android:textColor="@color/chengse"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="配送中"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_tupian"
                    android:layout_width="140dip"
                    android:layout_height="90dip"
                    android:src="@drawable/ertong"/>
                <LinearLayout
                    android:paddingLeft="10dip"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/name"
                        android:textColor="#333"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:text="商品名称：儿童套餐"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip" />
                    <TextView
                        android:id="@+id/num"
                        android:textColor="#333"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:text="商品数量：1份"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip" />
                    <TextView
                        android:id="@+id/price"
                        android:textSize="14sp"
                        android:textColor="#ffad73"
                        android:gravity="center_vertical"
                        android:text="￥128.00"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dip" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="10dip"></View>
            <TextView
                android:id="@+id/tv_check"
                android:background="#fff"
                android:paddingLeft="15dip"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/you"
                android:text="选择退款原因"/>
            <View
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <ListView
                android:visibility="gone"
                android:id="@+id/lv_tuikuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="10dip"></View>
            <EditText
                android:id="@+id/edt_beizhu"
                android:textSize="15sp"
                android:background="#fff"
                android:padding="10dip"
                android:gravity="left"
                android:hint="备注"
                android:layout_width="match_parent"
                android:layout_height="90dip" />
            <TextView
                android:background="#fff"
                android:layout_marginTop="15dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:text="上传图片"
                android:textColor="#333"
                android:layout_width="match_parent"
                android:layout_height="30dip" />
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="10dip">
                <ImageView
                    android:layout_gravity="left|center"
                    android:id="@+id/img_one"
                    android:src="@drawable/add_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_gravity="center"
                    android:id="@+id/mine_title_recycler"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dip"></View>

            <TextView
                android:id="@+id/tijiao_tuikuan"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fff"
                android:text="提交申请"
                android:background="@drawable/anniu"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                />

        </LinearLayout>


</LinearLayout>
