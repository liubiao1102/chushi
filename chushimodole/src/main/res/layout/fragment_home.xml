<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperereshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="230dip"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_liebiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/huise"></View>
                <RelativeLayout
                    android:id="@+id/rl_cuxiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/tv_yytc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/yingyang"
                        android:drawablePadding="10dp"
                        android:text="营养套餐推荐"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>
                    <TextView
                        android:drawablePadding="10dip"
                        android:id="@+id/tv_taocan_more"
                        android:text="更多"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/arrow_right"
                        />
                </RelativeLayout>
                <View
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"></View>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/huise"></View>
                <RelativeLayout
                    android:id="@+id/rl_changxiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/tv_thsp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/tehui"
                        android:drawablePadding="10dp"
                        android:text="特惠商品推荐"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>
                    <TextView
                        android:drawablePadding="10dip"
                        android:id="@+id/tv_shop_more"
                        android:text="更多"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/arrow_right"
                        />
                </RelativeLayout>
                <View
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"></View>
                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:src="@drawable/changxiaotupian"/>-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_changxiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/huise"></View>
                <RelativeLayout
                    android:id="@+id/rl_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/remai"
                        android:drawablePadding="10dp"
                        android:text="热卖商品推荐"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>
                </RelativeLayout>
                <View
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"></View>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_marginLeft="15dip"
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_search"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="10dp"
                android:minWidth="280dp"
                android:text="请输入搜索内容"/>
            <LinearLayout
                android:layout_marginRight="5dip"
                android:id="@+id/ll_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/saoyisao"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>