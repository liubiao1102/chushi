<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_da_ta_hou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.chushi.fragment.mine.MyDaTaActivity">
    <RelativeLayout
        android:id="@+id/rl_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/textblack"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee"></View>
    <LinearLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="头像"
            android:textColor="#333"
            android:textSize="16sp"/>
        <com.example.administrator.chushi.view.CircleImageView
            android:id="@+id/mydata_img"
            android:layout_gravity="center"
            android:layout_marginRight="20dip"
            android:layout_width="60dip"
            android:layout_height="60dip"
            >
        </com.example.administrator.chushi.view.CircleImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textColor="#333"
            android:textSize="16sp"/>

        <TextView
            android:layout_gravity="right|center"
            android:id="@+id/tv_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="right|center"
            android:textColor="#333"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mymobile"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="#333"
            android:textSize="16sp"/>
        <TextView
            android:layout_gravity="right|center"
            android:id="@+id/mymobilephone"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.6"
            android:gravity="right|center"
            android:text=""
            android:textColor="#333"
            android:textSize="16sp"/>
        <ImageView
            android:visibility="invisible"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/modify_password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="密码"
            android:textColor="#333"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#fff"></View>
    <Button
        android:id="@+id/btn_unlogin"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/chengse"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</LinearLayout>
