<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dip">
        <CheckBox
            android:visibility="gone"
            android:layout_margin="5dip"
            android:layout_gravity="center_vertical"
            android:id="@+id/check_ischeck"
            android:button="@null"
            android:background="@drawable/tab_housing_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_tupian"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:src="@drawable/ertong"/>
        <LinearLayout
            android:paddingLeft="20dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_lishi_title"
                android:textColor="#333"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="儿童营养套餐/2人"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <LinearLayout
                android:paddingRight="20dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_lishi_price"
                    android:textSize="13sp"
                    android:textColor="#ffad73"
                    android:gravity="center_vertical"
                    android:text="￥128.00"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>
</LinearLayout>